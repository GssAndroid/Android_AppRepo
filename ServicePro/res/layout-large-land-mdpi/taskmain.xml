<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/TaskRelativeLayout01" 
	android:layout_width="fill_parent" 	
    android:background="@color/bgcolor"
	android:layout_height="wrap_content" android:focusable="true" 
	android:isScrollContainer="true">	
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="5dip"
		android:id="@+id/tasklinear" >	     
		<TextView    
			style="@style/appLabel" 
			android:editable="false"
			android:padding="5dip"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/searchLbl" 
			android:textSize="20dp"
			android:text="@string/SERVICEPRO_FIND_LBL">
		</TextView>		
		
		<EditText 
		    android:inputType="textCapSentences"
			style="@style/findEditBigScreenStyle"
			android:id="@+id/searchBEF" 
			android:layout_marginRight="10dp"
			android:text="">
		</EditText>
	</LinearLayout>
	
	<ListView 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"		
		android:layout_below="@+id/tasklinear"
		android:drawSelectorOnTop="false" 
	    android:layout_weight="1"
		android:id="@android:id/list" 
		android:layout_marginTop="2px" >
	</ListView> 
</RelativeLayout>