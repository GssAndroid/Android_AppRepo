<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@color/bgcolor"
    android:layout_height="fill_parent">
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<LinearLayout 
		    android:orientation="horizontal"
		    android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="10dip">
			<TextView  
			    android:layout_height="wrap_content"  style="@style/appLabel" 
			    android:layout_gravity="left|center_vertical" android:layout_width="80dip" android:text="@string/SERVICEORD_ACTSCR_LBL_ACTVY"/>
			<Spinner 
				android:id="@+id/activity_sp"
		        android:layout_height="wrap_content"
		        android:drawSelectorOnTop="true" android:layout_gravity="right|center_vertical" android:layout_width="wrap_content" android:layout_weight="1"/>
		</LinearLayout>
		<LinearLayout 
		    android:orientation="horizontal"
		    android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="10dip">
			<TextView  
			    android:layout_height="wrap_content"  style="@style/appLabel" 
			    android:layout_width="wrap_content" android:layout_gravity="left|center_vertical" android:layout_weight="1" android:text="@string/SERVICEORD_ACTSCR_LBL_DURHRS"/>
			<EditText 
				android:id="@+id/duration_hrs"
		        android:layout_height="wrap_content"
		        android:layout_gravity="right|center_vertical" android:layout_width="150dip" android:numeric="integer"/>
		</LinearLayout>
		<LinearLayout 
		    android:orientation="horizontal"
		    android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="10dip">
			<TextView  
			    android:layout_height="wrap_content"  style="@style/appLabel" 
			    android:layout_width="wrap_content" android:layout_gravity="left|center_vertical" android:layout_weight="1" android:text="@string/SERVICEORD_ACTSCR_LBL_SRTDT"/>
			<LinearLayout 
			    android:orientation="horizontal"
			    android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="right|center_vertical">
				<TextView 
					android:id="@+id/start_date"
					android:text="@string/SERVICEPRO_RPMNSCR_LBLDATE"
					android:textColor="@color/black" 
			        android:layout_height="wrap_content"
			        android:layout_width="wrap_content"  />
			    <TextView 
					android:id="@+id/start_time"
					android:text="@string/SERVICEPRO_LBLTIME" 
					android:layout_marginLeft="5dip"
					android:textColor="@color/black"
			        android:layout_height="wrap_content"
			        android:layout_width="wrap_content" />		       
			</LinearLayout>		
		</LinearLayout>
		<LinearLayout 
		    android:orientation="horizontal"
		    android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="10dip">
			<TextView  
			    android:layout_height="wrap_content"  style="@style/appLabel"
			    android:layout_width="wrap_content" android:layout_gravity="left|center_vertical" android:layout_weight="1" android:text="@string/SERVICEORD_ACTSCR_LBL_ENDDT"/>
			<LinearLayout 
			    android:orientation="horizontal"
			    android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="right|center_vertical">
				<TextView 
					android:id="@+id/end_date"
					android:text="@string/SERVICEPRO_RPMNSCR_LBLDATE" 
					android:textColor="@color/black"
			        android:layout_height="wrap_content"
			        android:layout_width="wrap_content"  />
			    <TextView 
					android:id="@+id/end_time"
					android:text="@string/SERVICEPRO_LBLTIME" 
					android:textColor="@color/black"
					android:layout_marginLeft="5dip"
			        android:layout_height="wrap_content"
			        android:layout_width="wrap_content" />		       
			</LinearLayout>					
		</LinearLayout>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_marginTop="10dip"
			android:id="@+id/tzonelinear" >			     
			<TextView  
				android:layout_height="wrap_content"  style="@style/appLabel"
			    android:layout_width="80dip" android:layout_gravity="left|center_vertical" android:text="@string/SERVICEORD_ACTSCR_TZONE"/>			
			<Spinner 
				android:id="@+id/tzoneSpn"
		        android:layout_height="wrap_content"
		        android:drawSelectorOnTop="true" android:layout_gravity="right|center_vertical" android:layout_width="wrap_content" android:layout_weight="1"/>
		</LinearLayout>
		<LinearLayout 
		    android:orientation="horizontal"
		    android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="10dip">
			<TextView  
			    android:layout_height="wrap_content"  style="@style/appLabel"
			    android:layout_width="wrap_content" android:layout_gravity="left|center_vertical" android:layout_weight="1" android:text="@string/SERVICEORD_ACTSCR_LBL_NOTES"/>
			<EditText 
				android:id="@+id/notes"
		        android:layout_height="100dip"
		        android:layout_gravity="right|center_vertical" android:layout_width="150dip" android:scrollbarAlwaysDrawVerticalTrack="true" android:scrollbarStyle="insideOverlay"/>
		</LinearLayout>
		<Button 
			android:id="@+id/done_bt" android:background="@drawable/btn_blue1" style="@style/mainBtn" 
	        android:text="@string/SERVICEORD_FLTSCR_OK"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" android:layout_gravity="center" android:layout_marginTop="20dip" android:layout_marginBottom="10dip" />
	</LinearLayout>
</ScrollView>