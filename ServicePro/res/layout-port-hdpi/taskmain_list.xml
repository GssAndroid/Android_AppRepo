<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@drawable/list_item_bg"
    android:id="@+id/llitembg"
    android:layout_margin="5dip" android:layout_gravity="center_vertical|center_horizontal">	
    <LinearLayout 
		android:layout_width="60dp"
		android:layout_height="wrap_content"
		android:layout_marginLeft="5px" 
		android:orientation="vertical" >		
		<TextView 
			android:layout_marginTop="5px" 
			android:focusable="false" 
			android:id="@+id/date" 
			style="@style/appText"
			android:layout_height="wrap_content"
			android:layout_marginRight="5px" 
			android:layout_width="wrap_content">
		</TextView>
		<LinearLayout 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal" >
			<ImageView 
				android:id="@+id/indicator"
				android:layout_marginTop="5px" 
				android:layout_marginRight="5px" 
				android:layout_width="20dip" android:layout_height="20dip" />
			<ImageView 
				android:id="@+id/status"
				android:layout_marginTop="5px" 
				android:layout_marginRight="7px" 
				android:src="@drawable/light_grey" android:layout_width="21dip" android:layout_height="21dip"/>
		</LinearLayout>	
		<ImageView 
			android:id="@+id/errstatus"
			android:layout_marginTop="5px" 
			android:layout_marginRight="7px" 
			android:src="@drawable/notify" android:layout_width="24dip" android:layout_height="24dip" android:visibility="gone"/>
	</LinearLayout>	
	<ImageView 
		android:id="@+id/sepimg"
		android:layout_width="wrap_content"
		android:layout_height="60dp"
		android:layout_marginRight="5dip"
		android:background="@drawable/sep_line" android:layout_gravity="center_vertical|center_horizontal"/>
	<LinearLayout 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical" android:layout_weight="1"> 
	    <TextView 
			android:layout_marginTop="5px" 
			android:focusable="false" 
			android:id="@+id/custloc" 
			style="@style/appText"
			android:text=""
			android:layout_height="wrap_content"
			android:layout_weight="1" 
			android:layout_width="wrap_content">
		</TextView> 
		<TextView 
			android:layout_marginTop="2px" 
			android:focusable="false" 
			android:id="@+id/taskid" 
			style="@style/appText"
			android:layout_height="wrap_content"
			android:layout_weight="1" 
			android:layout_width="wrap_content">
		</TextView>
	</LinearLayout>	
	<ImageView 
		android:id="@+id/arrowimg"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dip"
		android:background="@drawable/arrow" android:layout_gravity="center_vertical|center_horizontal"/>
</LinearLayout>
